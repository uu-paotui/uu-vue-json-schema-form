{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "MultipleImg5",
    "type": "object",
    "definitions": {
        "ImgItem": {
            "title": "图片配置",
            "type": "object",
            "properties": {
                "imgUrl": {
                    "type": "string",
                    "format": "uri"
                },
                "imgLink": {
                    "type": "string",
                    "format": "uri",
                    "default": "https://www.jd.com/"
                }
            },
            "required": [
                "imgUrl",
                "imgLink"
            ]
        }
    },
    "properties": {
        "imgList": {
            "title": "配置多图模块",
            "description": "图片一行展示，最多配置5张图片",
            "type": "array",
            "minItems": 1,
            "maxItems": 5,
            "ui:options": {
                "showIndexNumber": true
            },
            "items": {
                "$ref": "#/definitions/ImgItem"
            }
        }
    }
}
